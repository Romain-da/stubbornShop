{% extends 'base.html.twig' %}

{% block title %}Modifier mon adresse{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2 class="mb-4">Modifier mon adresse</h2>

    <form method="POST">
        <div class="mb-3">
            <label for="fullName" class="form-label">Nom et prénom</label>
            <input type="text" id="fullName" name="fullName" class="form-control" value="{{ user.fullName }}">
        </div>

        <div class="mb-3">
            <label for="street" class="form-label">Numéro et nom de rue</label>
            <input type="text" id="street" name="street" class="form-control" value="{{ user.street }}">
        </div>

        <div class="mb-3">
            <label for="postalCode" class="form-label">Code postal</label>
            <input type="text" id="postalCode" name="postalCode" class="form-control" value="{{ user.postalCode }}">
        </div>

        <div class="mb-3">
            <label for="city" class="form-label">Ville</label>
            <input type="text" id="city" name="city" class="form-control" value="{{ user.city }}">
        </div>

        <div class="mb-3">
            <label for="phoneNumber" class="form-label">Numéro de téléphone</label>
            <input type="text" id="phoneNumber" name="phoneNumber" class="form-control" value="{{ user.phoneNumber }}">
        </div>

        <button type="submit" class="btn btn-primary">Enregistrer</button>
        <a href="{{ path('app_account') }}" class="btn btn-secondary">Annuler</a>
    </form>
</div>
{% endblock %}
