{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Détails{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center my-4">{{ product.name }}</h1>

    <div class="row">
        <div class="col-md-6">
            {% if product.image %}
                <img src="{{ asset('uploads/products/' ~ product.image) }}" alt="{{ product.name }}" class="img-fluid">
            {% else %}
                <img src="{{ asset('images/placeholder.png') }}" alt="Image non disponible" class="img-fluid">
            {% endif %}
        </div>
        <div class="col-md-6">
            <h3>Prix: {{ product.price }} €</h3>
            <p>{{ product.description }}</p>

            <form action="{{ path('app_cart_add', { id: product.id }) }}" method="post">
                <label for="size">Choisissez une taille :</label>
                <select name="size" id="size" class="form-select mb-3">
                    <option value="S">S</option>
                    <option value="M">M</option>
                    <option value="L">L</option>
                    <option value="XL">XL</option>
                </select>
                <button type="submit" class="btn btn-primary">Ajouter au panier</button>
            </form>
        </div>
    </div>

    <a href="{{ path('app_product_index') }}" class="btn btn-secondary mt-3">Retour à la boutique</a>
</div>
{% endblock %}