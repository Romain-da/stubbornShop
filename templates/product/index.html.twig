{% extends 'base.html.twig' %}

{% block title %}Boutique{% endblock %}

{% block body %}
<div class="container">
    <h2 class="my-4 text-center">Notre Boutique</h2>

    <div class="row">
        {% for product in products %}
            <div class="col-md-4">
                <div class="card">
                    <img src="{{ asset('uploads/products/' ~ product.image) }}" class="card-img-top" alt="{{ product.name }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text">{{ product.price }} â‚¬</p>
                        {% if product.isFeatured %}
                            <span class="badge bg-success">Mis en avant</span>
                        {% endif %}
                        <a href="{{ path('app_product_show', { 'id': product.id }) }}" class="btn btn-info">Voir le produit</a>
                    </div>
                </div>
            </div>
        {% else %}
            <p>Aucun produit disponible.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}