{% extends 'base.html.twig' %}

{% block title %}Boutique - Stubborn{% endblock %}

{% block body %}
<div class="row">
    <!-- Filtre prix -->
    <div class="col-md-3">
        <h5>Fourchette de prix</h5>
        <ul class="list-group">
            <li class="list-group-item"><a href="#">10 à 29 €</a></li>
            <li class="list-group-item"><a href="#">30 à 35 €</a></li>
            <li class="list-group-item"><a href="#">35 à 50 €</a></li>
        </ul>
    </div>

    <!-- Liste des produits -->
    <div class="col-md-9">
        <div class="row">
            {% for product in products %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="{{ asset('uploads/products/' ~ product.image) }}" class="card-img-top" alt="{{ product.name }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p class="card-text">{{ product.price }} €</p>
                            <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-primary">Voir</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <p>Aucun produit disponible.</p>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}