{% extends 'base.html.twig' %}

{% block title %}Votre Panier{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2 class="mb-4">Votre Panier</h2>

    {% if cart|length > 0 %}
        <table class="table">
            <thead>
                <tr>
                    <th>Nom du produit</th>
                    <th>Taille</th>
                    <th>Quantité</th>
                    <th>Prix Unitaire</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for item in cart %}
                    <tr>
                        <td>{{ item.name }}</td>
                        <td>{{ item.size }}</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.price }} €</td>
                        <td>{{ item.price * item.quantity }} €</td>
                        <td>
                            <a href="{{ path('app_cart_remove', { 'id': item.id, 'size': item.size }) }}" class="btn btn-danger btn-sm">
                                Supprimer
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="text-end">
            <a href="{{ path('app_cart_clear') }}" class="btn btn-warning">Vider le panier</a>
        </div>

        <div class="text-end">
            <a href="{{ path('app_product_index') }}" class="btn btn-secondary mt-3">Continuer mes achats</a>
        </div>

    {% else %}
        <p class="text-center">Votre panier est vide.</p>
    {% endif %}
</div>
{% endblock %}
