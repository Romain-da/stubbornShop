{% extends 'base.html.twig' %}

{% block title %}Votre Panier{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2 class="mb-4">Votre Panier</h2>

    {% if cart is defined and cart|length > 0 %}
        <div class="row">
            {% set total = 0 %}
            {% for item in cart %}
                <div class="col-md-12 mb-3">
                    <div class="card">
                        <div class="row g-0">
                            <div class="col-md-2">
                                <img src="{{ asset('uploads/products/' ~ item.image) }}" class="img-fluid rounded-start" alt="{{ item.name }}">
                            </div>
                            <div class="col-md-7">
                                <div class="card-body">
                                    <h5 class="card-title">{{ item.name }}</h5>
                                    <p class="card-text"><strong>Prix :</strong> {{ item.price }} ‚Ç¨</p>
                                    <p class="card-text"><strong>Taille :</strong> {{ item.size }}</p>
                                    <p class="card-text"><strong>Quantit√© :</strong> {{ item.quantity }}</p>
                                </div>
                            </div>
                            <div class="col-md-3 d-flex align-items-center justify-content-center">
                                <a href="{{ path('app_cart_remove', { 'id': item.id, 'size': item.size }) }}" class="btn btn-danger">Retirer du panier</a>
                            </div>
                        </div>
                    </div>
                </div>
                {% set total = total + (item.price * item.quantity) %}
            {% endfor %}
        </div>

        <!-- Section Total et boutons d'action -->
        <div class="row mt-4">
            <div class="col-md-6">
                <h4><strong>Total :</strong> {{ total|number_format(2, ',', ' ') }} ‚Ç¨</h4>
            </div>
            <div class="col-md-6 text-end">
                <a href="{{ path('app_product_index') }}" class="btn btn-success">Continuer mes achats</a>
                <button id="checkout-button" class="btn btn-danger">Finaliser ma commande</button>
            </div>
        </div>

    {% else %}
        <p class="text-center">Votre panier est vide.</p>
    {% endif %}

    <script src="https://js.stripe.com/v3/"></script>
    <script>
        {% if stripe_public_key is defined %}
            const stripe = Stripe("{{ stripe_public_key }}");
        {% else %}
            console.error("Erreur : la cl√© publique Stripe est manquante.");
        {% endif %}

        document.addEventListener("DOMContentLoaded", function () {
            const checkoutButton = document.getElementById("checkout-button");
            if (checkoutButton) {
                checkoutButton.addEventListener("click", function () {
                    let cartData = {{ cart|json_encode()|raw }};
                    console.log("üì¶ Donn√©es envoy√©es au serveur :", cartData);

                    fetch("{{ path('app_checkout') }}", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json"
                        },
                        body: JSON.stringify({ cart: cartData }) // üîπ Envoie du panier au serveur
                    })
                    .then(response => response.json())
                    .then(session => {
                        if (session.error) {
                            console.error("‚ùå Erreur lors du paiement :", session.error);
                            alert("Erreur : " + session.error);
                        } else {
                            return stripe.redirectToCheckout({ sessionId: session.id });
                        }
                    })
                    .catch(error => console.error("‚ùå Erreur r√©seau :", error));
                });
            }
        });
    </script>
</div>
{% endblock %}
